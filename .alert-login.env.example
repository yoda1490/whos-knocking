# Copy this file to .env and adjust values.
# Comma-separated list of alert channels: mail,slack,telegram
ALERT_TYPES=mail

# Email settings (required if 'mail' present in ALERT_TYPES)
RECIPIENT=your-email@example.com
FROM_ADDR=server@yourdomain.com

# Slack webhook (required if 'slack' present)
SLACK_WEBHOOK_URL=

# Telegram bot credentials (required if 'telegram' present)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# IP geolocation toggle (uses ipinfo.io when true)
ENABLE_IP_GEO=true
